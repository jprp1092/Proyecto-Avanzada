@model Proyecto_Avanzada.Entities.CorreoEnt

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout_General.cshtml";
}

<!-- Contact Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="text-center mb-3 pb-3">
            <h6 class="text-primary text-uppercase" style="letter-spacing: 5px;">Contacto</h6>
            <h1>Contáctanos para cualquier consulta</h1>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="contact-form bg-white" style="padding: 30px;">
                    <div id="success"></div>
                    @*<form name="sentMessage" id="contactForm" novalidate="novalidate">*@


                        @using (Html.BeginForm("EnvioCorreoContacto", "Home", FormMethod.Post, new { @class = "form" }))
                        {
                            <div class="form-row">
                                <div class="control-group col-sm-6">

                                    @Html.TextBoxFor(Model => Model.Emisor, new { @class = "form-control p-4", @placeholder = "Tu nombre", @required = true })
                                    <p class="help-block text-danger"></p>
                                </div>

                                <div class="control-group col-sm-6">

                                    @Html.TextBoxFor(Model => Model.CorreoEmisor, new { @class = "form-control p-4", @placeholder = "Correo electrónico", @type = "Correo", @required = true })
                                    <p class="help-block text-danger"></p>
                                </div>

                                <div class="control-group col-sm-6">
                                    @Html.DropDownListFor(Model => Model.Asunto, new SelectList(new[] { "Consulta General", "Consultar de Reservación", "Consulta de Usuario" }), "Seleccione un asunto", new { @class = "form-control" })
                                    <p class="help-block text-danger"></p>
                                </div>

                                @Html.TextAreaFor(Model => Model.CuerpoCorreo, new { @class = "form-control py-3 px-4", @placeholder = "Por favor, introduce tu mensaje", @required = true })
                                <p class="help-block text-danger"></p>
                                <br /> <br />
                                <br /> <br />
                                <br /> <br />

                            </div>

                                <br />

                            <div class="text-center">
                                <button class="btn btn-primary py-3 px-4" type="submit" id="sendMessageButton">Enviar mensaje</button>
                            </div>
                        }
                    @*</form>*@
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->
<!-- Back to Top -->
<a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="fa fa-angle-double-up"></i></a>
