@model Proyecto_Avanzada.Entities.UsuarioEnt


@{
    ViewBag.Title = "Home Page";
        Layout = "~/Views/Shared/_Layout_General.cshtml";

}

<div class="row">

    <div class="col-md-1"></div>

    <div class="col-md-10 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Actualizar Información</h4>

                <br />

                @using (Html.BeginForm("ActualizarUsuario", "Usuarios", FormMethod.Post, new { @class = "forms-sample" }))
                {

                    <div class="row">

                        @Html.HiddenFor(x => x.ConsecutivoUsuario)

                        <div class="form-group col-md-6">
                            <label>Correo Electrónico</label>
                            @Html.TextBoxFor(m => m.CorreoElectronico, new { @class = "form-control", @readonly = "true" })
                        </div>
                        <div class="form-group col-md-6">
                            <label>Contraseña</label>
                            @Html.TextBoxFor(m => m.Contrasenna, new { @class = "form-control", @type = "password" })
                        </div>

                    </div>

                    <div class="row">

                        <div class="form-group col-md-6">
                            <label>Identificación</label>
                            @Html.TextBoxFor(m => m.Identificacion, new
                       {
                           @class = "form-control",
                           @onkeyUp = "ConsultarNombreApi();"
                       })
                        </div>
                        <div class="form-group col-md-6">
                            <label>Nombre</label>
                            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", @readonly = "true" })
                        </div>

                    </div>

                    <div class="row">

                        <div class="form-group col-md-6">
                            <label>Provincia</label>
                            @Html.DropDownListFor(m => m.CodProvincia, ViewBag.ListaProvincias as List<SelectListItem>,
                               new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-6">
                            <label>Rol</label>
                            @Html.DropDownListFor(m => m.Rol, ViewBag.ListaRoles as List<SelectListItem>, new { @class = "form-control" })
                        </div>

                    </div>

                    <br />

                    <input type="submit" class="btn btn-primary mr-2" value="Actualizar">

                }
            </div>
        </div>
    </div>

    <div class="col-md-1"></div>

</div>

<script src="~/Functions/ActualizarUsuario.js"></script>
