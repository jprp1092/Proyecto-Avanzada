@model Proyecto_Avanzada.Entities.HospedajeEnt

@{
    ViewBag.Title = "Home Page";
        Layout = "~/Views/Shared/_Layout_General.cshtml";

}

<div class="row">

    <div class="col-md-1"></div>

    <div class="col-md-10 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Ingresar nuevo hospedaje </h4>

                <br />

                @using (Html.BeginForm("RegistrarHospedaje", "Hospedaje", FormMethod.Post, new { @class = "forms-sample" }))
                {

                <div class="row">

                    @Html.HiddenFor(x => x.ConsecutivoHospedaje)

                    <div class="form-group col-md-6">
                        <label>Nombre de hospedaje</label>
                        @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control",
                       @required = true
                   })
                    </div>

                    <div class="form-group col-md-6">
                        <label>Provincia</label>
                        @Html.DropDownListFor(x => x.CodProvincia, ViewBag.ListaProvincias as List<SelectListItem>,
                           "Seleccione una opción", new { @class = "form-control",
                               @required = true
                           })
                    </div>

                </div>

                <div class="row">

                    <div class="form-group col-md-6">
                        <label>Precio</label>
                        @Html.TextBoxFor(x => x.Precio, new { @class = "form-control",
                       @required = true
                   })
                    </div>
                    <div class="form-group col-md-6">
                        <label>Disponibilidad</label>
                        @Html.TextBoxFor(x => x.Disponibilidad, new { @class = "form-control", @readonly = "true", @value = "disponible" , @placeholder = "Disponible"})
                    </div>

                </div>
                <br />

                <input type="submit" class="btn btn-primary mr-2" value="Agregar Hospedaje">

                }
            </div>
        </div>
    </div>

    <div class="col-md-1"></div>

</div>


