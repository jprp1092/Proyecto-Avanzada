@model Proyecto_Avanzada.Entities.ReservasEnt

@{
    ViewBag.Title = "Home Page";
        Layout = "~/Views/Shared/_Layout_General.cshtml";

}

<div class="row">

    <div class="col-md-1"></div>

    <div class="col-md-10 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Actualizar Información</h4>

                <br />

                @using (Html.BeginForm("ActualizarReservas", "Reservas", FormMethod.Post, new { @class = "forms-sample" }))
                {

                    <div class="row">

                        @Html.HiddenFor(x => x.ConsecutivoReservas)

                        <div class="form-group col-md-6">
                            <label>Fecha de creación</label>
                            @Html.TextBoxFor(m => m.FechaReserva, new { @class = "form-control", @readonly = "true" })
                        </div>
                        <div class="form-group col-md-6">
                            <label>Usuario</label>
                            @Html.TextBoxFor(m => m.CodUsuario, new { @class = "form-control", @readonly = "true" })
                        </div>

                    </div>

                    <div class="row">

                        <div class="form-group col-md-6">
                            <label>Destino</label>
                            @Html.TextBoxFor(m => m.CodDestino, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-6">
                            <label>Pago</label>

                            @Html.TextBoxFor(m => m.Pago, new { @class = "form-control", @readonly = "true" })
                        </div>

                    </div>

                    <br />

                    <input type="submit" class="btn btn-primary mr-2" value="Actualizar">

                }
            </div>
        </div>
    </div>

    <div class="col-md-1"></div>

</div>

<script src="~/Functions/ActualizarUsuario.js"></script>
